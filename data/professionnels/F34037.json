                          "children": [
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "element",
                                  "name": "Valeur",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "20 %"
                                    }
                                  ]
                                },
                                {
                                  "type": "text",
                                  "text": " les 13"
                                },
                                {
                                  "type": "element",
                                  "name": "Exposant",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "e"
                                    }
                                  ]
                                },
                                {
                                  "type": "text",
                                  "text": " et 14"
                                },
                                {
                                  "type": "element",
                                  "name": "Exposant",
