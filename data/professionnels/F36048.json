                    },
                    {
                      "type": "element",
                      "name": "Item",
                      "children": [
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Indicateurs de suivi de projets "
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": ": pour mesurer l'avancement des projets"
                            }
                          ]
                        }
                      ]
                    }
