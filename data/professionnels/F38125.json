            {
              "type": "element",
              "name": "Chapitre",
              "children": [
                {
                  "type": "element",
                  "name": "Titre",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Quels types d'échantillons sont concernés par l'interdiction ?"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "SousChapitre",
                  "children": [
                    {
                      "type": "element",
                      "name": "Titre",
                      "children": [
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Cas général"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Il est "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "interdit"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " de fournir à un consommateur, "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "sans demande de sa part"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": ", un échantillon de produit dans le cadre d'une démarche commerciale."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Un échantillon de produit fourni dans le cadre d'une démarche commerciale est une "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "petite quantité"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " de marchandise :"
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Liste",
                      "attributes": {
                        "type": "puce"
                      },
                      "children": [
                        {
                          "type": "element",
                          "name": "Item",
                          "children": [
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Dont le "
                                },
                                {
                                  "type": "element",
                                  "name": "MiseEnEvidence",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "conditionnement est différent"
                                    }
                                  ]
                                },
                                {
                                  "type": "text",
                                  "text": " du produit commercialisé"
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Item",
                          "children": [
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Qui est "
                                },
                                {
                                  "type": "element",
                                  "name": "MiseEnEvidence",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "cédé gratuitement"
                                    }
                                  ]
                                },
                                {
                                  "type": "text",
                                  "text": " aux consommateurs"
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "SousChapitre",
                  "children": [
                    {
                      "type": "element",
                      "name": "Titre",
                      "children": [
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Exceptions"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Certains échantillons sont "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "exemptés de l'interdiction"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " et il est autorisé de les fournir sans demande de la part des consommateurs."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Il s'agit des échantillons suivants :"
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Liste",
                      "attributes": {
                        "type": "puce"
                      },
                      "children": [
                        {
                          "type": "element",
                          "name": "Item",
                          "children": [
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Les denrées "
                                },
                                {
                                  "type": "element",
                                  "name": "MiseEnEvidence",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "alimentaires"
                                    }
                                  ]
                                },
                                {
                                  "type": "text",
                                  "text": " qui ne sont "
                                },
                                {
                                  "type": "element",
                                  "name": "MiseEnEvidence",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "pas préemballées"
                                    }
                                  ]
                                },
                                {
                                  "type": "text",
                                  "text": " et qui sont "
                                },
                                {
                                  "type": "element",
                                  "name": "MiseEnEvidence",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "remises gratuitement"
                                    }
                                  ]
                                },
                                {
                                  "type": "text",
                                  "text": " aux consommateurs pour une "
                                },
                                {
                                  "type": "element",
                                  "name": "MiseEnEvidence",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "consommation immédiate et sur place"
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Item",
                          "children": [
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Les publications de presse"
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Item",
                          "children": [
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Les fac-similés de publications de presse"
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Item",
                          "children": [
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Les échantillons présents dans les publications de presse, à la condition que la présence d'échantillons soit indiquée ou visible"
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "Chapitre",
              "children": [
                {
                  "type": "element",
                  "name": "Titre",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Dans quels cas est-il possible de fournir des échantillons ?"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Tout professionnel tenant à la disposition des consommateurs des échantillons de produits peut "
                    },
                    {
                      "type": "element",
                      "name": "MiseEnEvidence",
                      "children": [
                        {
                          "type": "text",
                          "text": "les informer"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " par tout moyen (par exemple par l'intermédiaire d'un affichage) que ces échantillons peuvent leur être "
                    },
                    {
                      "type": "element",
                      "name": "MiseEnEvidence",
                      "children": [
                        {
                          "type": "text",
                          "text": "remis uniquement à leur demande"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": "."
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Lorsque le professionnel communique "
                    },
                    {
                      "type": "element",
                      "name": "MiseEnEvidence",
                      "children": [
                        {
                          "type": "text",
                          "text": "à distance"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " avec les consommateurs, la fourniture d'échantillons est possible uniquement si le consommateur l'exprime. "
                    },
                    {
                      "type": "element",
                      "name": "MiseEnEvidence",
                      "children": [
                        {
                          "type": "text",
                          "text": "La première demande exprimée par les consommateurs permet la remise successive"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " d'échantillons jusqu'à renonciation de leur part."
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "ANoter",
                  "children": [
                    {
                      "type": "element",
                      "name": "Titre",
                      "children": [
                        {
                          "type": "text",
                          "text": "Exemple"
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
