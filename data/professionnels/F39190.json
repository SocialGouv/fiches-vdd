          ]
        },
        {
          "type": "element",
          "name": "Definition",
          "attributes": {
            "ID": "R54075"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Opérateur de compétences (OPCO)"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Finance l'apprentissage, apporte son aide pour élaborer les certifications professionnelles et pour définir les besoins en formation des entreprises"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Definition",
          "attributes": {
            "ID": "R72684"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Centre de formation d'apprentis (CFA)"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Organisme qui dispense aux apprentis une formation générale et technique, en complément de la formation reçue dans les entreprises."
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
