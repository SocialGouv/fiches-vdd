        },
        {
          "type": "element",
          "name": "Reference",
          "attributes": {
            "type": "Texte de référence",
            "URL": "http://www.legifrance.gouv.fr/affichTexte.do?cidTexte=JORFTEXT000029150768",
            "ID": "R785"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Arrêté du 25 juin 2014 portant agrément de la convention du 14 mai 2014 relative à l'indemnisation du chômage et les textes qui lui sont associés"
                }
              ]
            },
            {
              "type": "element",
              "name": "Complement",
              "children": [
                {
                  "type": "text",
                  "text": "Article 37"
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Reference",
          "attributes": {
            "type": "Texte de référence",
            "URL": "https://www.legifrance.gouv.fr/affichCode.do?idSectionTA=LEGISCTA000006156101&cidTexte=LEGITEXT000006073189",
            "ID": "R51859"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Code de la sécurité sociale : articles L361-1 à L316-5"
                }
              ]
            },
            {
              "type": "element",
              "name": "Complement",
              "children": [
                {
                  "type": "text",
                  "text": "Assurance décès"
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Definition",
          "attributes": {
            "ID": "R51860"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Délai d'attente (assurance chômage)"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Période écoulée entre l'inscription du demandeur d'emploi à Pôle emploi et  le versement de son indemnisation. Elle est fixée à 7 jours."
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Definition",
          "attributes": {
            "ID": "R51862"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Différé d'indemnisation (assurance chômage)"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Délai qui  fixe la date effective de versement des indemnités versées par Pôle emploi au demandeur d'emploi. Il est calculé en fonction des indemnités de licenciement perçues."
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Definition",
          "attributes": {
            "ID": "R12574"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Descendant"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Enfant, petit-enfant, arrière petit-enfant"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Definition",
          "attributes": {
            "ID": "R42442"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Vivre en couple"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Mariage, Pacs ou concubinage (union libre)"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
