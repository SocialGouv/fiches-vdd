        {
          "type": "element",
          "name": "Avertissement",
          "attributes": {
            "ID": "R66832",
            "date": "2024-12-23"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Articulation AAH , activité professionnelle et droits à la retraite"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "element",
                      "name": "LienExterne",
                      "attributes": {
                        "URL": "https://www.legifrance.gouv.fr/jorf/article_jo/JORFARTI000048727628"
                      },
                      "children": [
                        {
                          "type": "text",
                          "text": "L'article 254 de la loi de finances pour 2024"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " permet aux bénéficiaires de l'allocation aux adultes handicapés (AAH) de "
                    },
                    {
                      "type": "element",
                      "name": "MiseEnEvidence",
                      "children": [
                        {
                          "type": "text",
                          "text": "continuer à percevoir cette allocation"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " s'ils décident de poursuivre leur "
                    },
                    {
                      "type": "element",
                      "name": "MiseEnEvidence",
                      "children": [
                        {
                          "type": "text",
                          "text": "activité professionnelle"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " après leur âge d'ouverture des droits à la "
                    },
                    {
                      "type": "element",
                      "name": "MiseEnEvidence",
                      "children": [
                        {
                          "type": "text",
                          "text": "retraite"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": ". Cette mesure entrera en vigueur à une date fixée par décret."
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Par ailleurs, "
                    },
                    {
                      "type": "element",
                      "name": "LienExterne",
                      "attributes": {
                        "URL": "https://www.legifrance.gouv.fr/jorf/article_jo/JORFARTI000048727629"
                      },
                      "children": [
                        {
                          "type": "text",
                          "text": "l'article 255 de cette même loi"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " prévoit le "
                    },
                    {
                      "type": "element",
                      "name": "MiseEnEvidence",
                      "children": [
                        {
                          "type": "text",
                          "text": "maintien"
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "MiseEnEvidence",
                      "children": [
                        {
                          "type": "text",
                          "text": "du cumul "
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": "de la "
                    },
                    {
                      "type": "element",
                      "name": "MiseEnEvidence",
                      "children": [
                        {
                          "type": "text",
                          "text": "majoration pour la vie autonome"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " et du "
                    },
                    {
                      "type": "element",
                      "name": "MiseEnEvidence",
                      "children": [
                        {
                          "type": "text",
                          "text": "complément de ressources"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " pour les personnes "
                    },
                    {
                      "type": "element",
                      "name": "MiseEnEvidence",
                      "children": [
                        {
                          "type": "text",
                          "text": "perdant le bénéfice de l'AAH"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " du fait de l'augmentation du montant de leur retraite à la suite de la réforme des retraites. Cette mesure prévoit également la publication d'un décret."
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Notre page sera mise à jour dès la parution de ces textes."
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Dans l'attente, les informations présentées sur cette page restent valables."
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Texte",
          "children": [
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "Non"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ", le complément de ressources est "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "supprimé depuis le 1"
                    },
                    {
                      "type": "element",
                      "name": "Exposant",
                      "children": [
                        {
                          "type": "text",
                          "text": "er"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " décembre 2019"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Toutefois, si vous perceviez cette aide jusqu'à cette date, vous continuez d'en bénéficier pendant 10 ans si vous remplissez les conditions d'attribution (liées à votre taux d'incapacité, vos ressources et votre logement)."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Le complément de ressources forme avec l'AAH ce que l'on appelle la "
                },
                {
                  "type": "element",
                  "name": "Expression",
                  "children": [
                    {
                      "type": "text",
                      "text": "garantie de ressources"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Le montant du complément de ressources est fixé à "
                },
                {
                  "type": "element",
                  "name": "Valeur",
                  "children": [
                    {
                      "type": "text",
                      "text": "179,31 €"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " ce qui porte la garantie de ressources (AAH + complément de ressources) à "
                },
                {
                  "type": "element",
                  "name": "Valeur",
                  "children": [
                    {
                      "type": "text",
                      "text": "1 195,36 €"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " par mois."
                }
              ]
            },
            {
              "type": "element",
              "name": "TitreFlottant",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Taux d'incapacité"
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Vous devez remplir les 2 conditions suivantes :"
                }
              ]
            },
            {
              "type": "element",
              "name": "Liste",
              "attributes": {
                "type": "puce"
              },
              "children": [
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Avoir un taux d'incapacité d'au moins "
                        },
                        {
                          "type": "element",
                          "name": "Valeur",
                          "children": [
                            {
                              "type": "text",
                              "text": "80 %"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Avoir une capacité de travail inférieure à "
                        },
                        {
                          "type": "element",
                          "name": "Valeur",
                          "children": [
                            {
                              "type": "text",
                              "text": "5 %"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " du fait de votre handicap. Cette incapacité est évaluée par la commission des droits et de l'autonomie des personnes handicapées (CDAPH). Les "
                        },
                        {
                          "type": "element",
                          "name": "Valeur",
                          "children": [
                            {
                              "type": "text",
                              "text": "5 %"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " équivalent à une incapacité de travail quasi absolue."
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "TitreFlottant",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Ressources"
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Vous devez remplir les 2 conditions suivantes :"
                }
              ]
            },
            {
              "type": "element",
              "name": "Liste",
              "attributes": {
                "type": "puce"
              },
              "children": [
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Toucher l'allocation aux adultes handicapés (AAH) à taux plein ou en complément d'une retraite, d'une pension d'invalidité ou d'une rente d'accident du travail"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Ne pas avoir perçu de revenu à caractère professionnel depuis 1 an à la date du dépôt de la demande de complément"
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "TitreFlottant",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Logement"
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Vous devez vivre dans un logement indépendant, c'est-à-dire qui n'appartient pas à un établissement."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Si vous êtes hébergé par un particulier à son domicile, le logement n'est pas considéré comme indépendant. Par contre, si ce logement appartient à la "
                },
                {
                  "type": "element",
                  "name": "LienIntra",
                  "attributes": {
                    "LienID": "R42442",
                    "type": "Définition de glossaire"
                  },
                  "children": [
                    {
                      "type": "text",
                      "text": "personne avec laquelle vous vivez en couple"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ", ce logement est considéré comme indépendant."
                }
              ]
            },
            {
              "type": "element",
              "name": "ASavoir",
              "children": [
                {
                  "type": "element",
                  "name": "Titre",
                  "children": [
                    {
                      "type": "text",
                      "text": "À savoir"
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Le complément de ressources cesse d'être versé si vous travaillez."
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Si vous avez atteint "
                },
                {
                  "type": "element",
                  "name": "LienInterne",
                  "attributes": {
                    "LienPublication": "F14043",
                    "type": "Fiche Question-réponse conditionnée",
                    "audience": "Particuliers"
                  },
                  "children": [
                    {
                      "type": "text",
                      "text": "l'âge minimum légal de départ à la retraite"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ", le complément de ressources est versé si vous touchez l'AAH en complément d'une retraite. Vous devez toutefois remplir les conditions d'accès au complément de ressources."
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "VoirAussi",
          "attributes": {
            "important": "non"
          },
          "children": [
            {
              "type": "element",
              "name": "Fiche",
              "attributes": {
                "ID": "F12242",
                "audience": "Particuliers"
              },
              "children": [
                {
                  "type": "element",
                  "name": "Titre",
                  "children": [
                    {
                      "type": "text",
                      "text": "Allocation aux adultes handicapés (AAH)"
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Theme",
                  "attributes": {
                    "ID": "N19811"
                  },
                  "children": [
                    {
                      "type": "element",
                      "name": "Titre",
                      "children": [
                        {
                          "type": "text",
                          "text": "Social - Santé"
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "Fiche",
              "attributes": {
                "ID": "F12903",
                "audience": "Particuliers"
              },
              "children": [
                {
                  "type": "element",
                  "name": "Titre",
                  "children": [
