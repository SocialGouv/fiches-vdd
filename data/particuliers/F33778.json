                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "- Utilisation du "
                            },
                            {
                              "type": "element",
                              "name": "LienInterne",
                              "attributes": {
                                "LienPublication": "F23533",
                                "type": "Fiche d'information",
                                "audience": "Professionnels"
                              },
                              "children": [
                                {
                                  "type": "text",
                                  "text": "crédit d'impôt pour les dépenses de recherche"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " et du "
                            },
                            {
                              "type": "element",
                              "name": "LienInterne",
                              "attributes": {
                                "LienPublication": "F31326",
                                "type": "Fiche d'information",
                                "audience": "Professionnels"
                              },
                              "children": [
                                {
                                  "type": "text",
                                  "text": "crédit d'impôt pour la compétitivité et l'emploi (CICE)"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " (si l'entreprise en bénéficie)"
                            }
                          ]
                        }
                      ]
                    }
