              "children": [
                {
                  "type": "element",
                  "name": "Titre",
                  "children": [
                    {
                      "type": "text",
                      "text": "À savoir"
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "si le terrain est vendu comme un terrain "
                    },
                    {
                      "type": "element",
                      "name": "Expression",
                      "children": [
                        {
                          "type": "text",
                          "text": "à bâtir"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": ", le vendeur s'engage obligatoirement à ce que le terrain soit constructible. "
                    }
                  ]
                }
              ]
            }
