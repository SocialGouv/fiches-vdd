                    {
                      "type": "text",
                      "text": "La commission de réforme et le comité médical seront remplacés à partir du 1"
                    },
                    {
                      "type": "element",
                      "name": "Exposant",
                      "children": [
                        {
                          "type": "text",
                          "text": "er"
                        }
