          },
          "children": [
            {
              "type": "text",
              "text": "Comment établir une procuration pour un compte bancaire ?"
            }
          ]
        },
        {
          "type": "element",
          "name": "QuestionReponse",
          "attributes": {
            "ID": "F17059",
            "audience": "Particuliers"
          },
