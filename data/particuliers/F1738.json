            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "L'employeur doit mettre à la disposition des travailleurs les moyens d'assurer leur propreté individuelle, notamment des toilettes et des lavabos."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "L'obligation"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " de mettre en place un "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "local vestiaire"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " dans l'entreprise "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "diffère"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " selon que les salariés portent des "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "vêtements de travail spécifiques"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " ou des"
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence"
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "element",
                      "name": "LienInterne",
                      "attributes": {
                        "LienPublication": "R74531",
                        "type": "Acronyme"
                      },
                      "children": [
                        {
                          "type": "text",
                          "text": "EPI"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " ou n'en portent "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "pas"
                    }
                  ]
                },
                {
                  "type": "text",
