        {
          "type": "element",
          "name": "Texte",
          "children": [
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Les obligations de l'employeur diffèrent selon que les salariés portent des vêtements de travail spécifiques ou des équipements de protection individuelle (EPI) ou n'en portent pas."
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "ListeSituations",
          "attributes": {
            "affichage": "onglet"
          },
          "children": [
            {
              "type": "element",
              "name": "Situation",
              "children": [
                {
                  "type": "element",
                  "name": "Titre",
                  "children": [
                    {
                      "type": "text",
                      "text": "Vêtements spécifiques ou EPI"
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Texte",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "L'employeur"
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": " doit mettre des vestiaires collectifs"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " à la disposition de ses salariés dans les entreprises "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "où les salariés portent des vêtements de travail spécifiques ou des EPI."
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " Par exemple, un uniforme, une combinaison de travail, des lunettes de protection ou un casque."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Cette obligation s'applique dans les entreprises"
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": " quelle que soit leur activité ou le nombre de salariés."
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Chapitre",
                      "children": [
                        {
                          "type": "element",
                          "name": "Titre",
                          "children": [
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Comment les vestiaires collectifs doivent-ils être aménagés ?"
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Les vestiaires collectifs doivent être installés dans un local d'une "
                            },
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "surface suffisante"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": ". Le local doit être"
                            },
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": " isolé des locaux de travail et de stockage"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": ", mais placé à proximité du passage du personnel."
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Des"
                            },
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": " vestiaires séparés"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " doivent être prévus"
                            },
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": " pour les hommes et les femmes."
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Le local doit être "
                            },
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "convenablement chauffé et aéré."
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " Il doit être "
                            },
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "entretenu et nettoyé régulièrement"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": "."
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Il doit être équipé d'un "
                            },
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "nombre suffisant "
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": "de chaises ou de bancs et d'armoires individuelles ininflammables"
                            },
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": " équipées d'une serrure ou un cadenas."
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Lorsque les vêtements de travail peuvent être "
                            },
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "souillés de matières dangereuses, salissantes ou malodorantes"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": ", les armoires comprennent un "
                            },
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "compartiment réservé à ces vêtements."
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "ANoter",
                          "children": [
                            {
                              "type": "element",
                              "name": "Titre",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "À noter"
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "L'employeur peut aménager des vestiaires individuels, mais ils ne sont pas obligatoires si les vestiaires collectifs répondent aux normes."
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Chapitre",
                      "children": [
                        {
                          "type": "element",
                          "name": "Titre",
                          "children": [
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Qui est chargé de l'entretien des vestiaires collectifs ?"
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "L'employeur veille à ce que les vestiaires soient maintenus dans un "
                            },
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "état permanent de propreté"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": "."
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "Situation",
              "children": [
                {
                  "type": "element",
                  "name": "Titre",
                  "children": [
                    {
                      "type": "text",
                      "text": "Autre cas"
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Texte",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "L'employeur n'a pas "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "l'obligation"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " de mettre à disposition un local de vestiaires collectifs aménagé lorsque les salariés "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "ne portent pas de vêtements de travail spécifique ou d'EPI"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": "."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "L’employeur peut, dans ce cas, fournir aux salariés "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "un meuble de rangement sécurisé"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " en lieu et place de vestiaires collectifs."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Par exemple, une armoire métallique, un casier de vestiaire ou un meuble"
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": " muni d’une serrure ou d’un cadenas,"
                            }
                          ]
                        },
                        {
                          "type": "text",
