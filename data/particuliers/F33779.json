        {
          "type": "element",
          "name": "Avertissement",
          "attributes": {
            "ID": "R50404",
            "date": "2020-01-01"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Remplacement du CE"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Depuis le 1"
                    },
                    {
                      "type": "element",
                      "name": "Exposant",
                      "children": [
                        {
                          "type": "text",
                          "text": "er"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " janvier 2020, le "
                    },
                    {
                      "type": "element",
                      "name": "LienInterne",
                      "attributes": {
                        "LienPublication": "F34474",
                        "type": "Fiche d'information",
                        "audience": "Particuliers"
                      },
                      "children": [
                        {
                          "type": "text",
                          "text": "comité social et économique (CSE"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": ") remplace  le comité d'entreprise (CE)."
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Cette page est en cours de mise à jour."
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Texte",
          "children": [
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "L'exercice du droit d'alerte permet au CE d'intervenir lorsque la situation économique ou sociale de l'entreprise apparaît préoccupante."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Le déclenchement de la procédure d'alerte peut être justifié par un des événements suivants :"
                }
              ]
            },
            {
              "type": "element",
              "name": "Liste",
              "attributes": {
                "type": "puce"
              },
              "children": [
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Baisse importante du chiffre d'affaires de l'entreprise"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Report renouvelé d'échéances "
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Non-respect de la tenue des séances du CE"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Refus de certification des comptes par le "
                        },
                        {
                          "type": "element",
                          "name": "LienIntra",
                          "attributes": {
                            "LienID": "R32143",
                            "type": "Définition de glossaire"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "commissaire aux comptes"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Retards réitérés dans le paiement des salaires"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Perte d'un fournisseur ou d'un client important"
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Le CE est en droit d'exercer un "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "droit d'alerte économique"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ", lorsqu'il a connaissance de faits de nature à affecter de manière préoccupante la situation économique de l'entreprise."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Il peut demander à l'employeur de lui fournir des explications. Cette demande est inscrite de droit à l'ordre du jour de la prochaine séance du CE."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Si le CE n'a pas obtenu de réponse suffisante de l'employeur (ou si celle-ci confirme le caractère préoccupant de la situation), il établit un rapport. Pour l'aider dans sa mission, le CE peut :"
                }
              ]
            },
            {
              "type": "element",
              "name": "Liste",
              "attributes": {
                "type": "puce"
              },
              "children": [
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "être assisté d'un expert-comptable (une fois par exercice comptable),"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "convoquer le commissaire aux comptes,"
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "être aidé de 2 salariés de l'entreprise choisis en dehors du CE (qui disposent de 5 heures chacun pour aider le CE à établir ce rapport)."
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Les informations concernant l'entreprise communiquées au CE ont un caractère confidentiel."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Le CE est également en droit d'exercer un "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "droit d'alerte sociale"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": ", s'il constate un  accroissement important (ou un recours abusif) des "
                },
                {
                  "type": "element",
                  "name": "LienInterne",
                  "attributes": {
                    "LienPublication": "R2454",
                    "type": "Sigle"
                  },
                  "children": [
                    {
                      "type": "text",
                      "text": "CDD"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " ou du travail temporaire dans l'entreprise. L'examen de cette question est inscrit à l'ordre du jour de la réunion ordinaire suivante du CE, à la demande de la majorité de ses membres. Le CE peut saisir l'inspection du travail."
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Definition",
          "attributes": {
            "ID": "R32143"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Commissaire aux comptes"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Membre d'une profession libérale réglementée, chargé du contrôle comptable, financier et juridique d'une société, dont il est indépendant. Il dispose d'un droit d'alerte en cas d'irrégularités dans la gestion du personnel dirigeant."
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Abreviation",
          "attributes": {
            "ID": "R2454",
            "type": "Sigle"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "CDD"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Contrat à durée déterminée"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
