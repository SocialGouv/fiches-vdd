                      }
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "OuSAdresser",
                  "attributes": {
                    "ID": "R1",
                    "sve": "non",
                    "type": "Local personnalisé sur SP"
                  },
                  "children": [
                    {
                      "type": "element",
