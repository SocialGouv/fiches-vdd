                {
                  "type": "element",
                  "name": "Texte",
                  "children": [
                    {
                      "type": "element",
                      "name": "Chapitre",
                      "children": [
                        {
                          "type": "element",
                          "name": "BlocCas",
                          "attributes": {
                            "affichage": "onglet"
                          },
                          "children": [
                            {
                              "type": "element",
                              "name": "Cas",
                              "children": [
                                {
                                  "type": "element",
                                  "name": "Titre",
                                  "children": [
                                    {
                                      "type": "element",
                                      "name": "Paragraphe",
                                      "children": [
                                        {
                                          "type": "text",
                                          "text": "Pour prendre un autre emploi"
                                        }
                                      ]
                                    }
                                  ]
                                },
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "La salariée  qui souhaite  démissionner pendant son congé maternité pour travailler  dans une autre entreprise doit effectuer un "
                                    },
                                    {
                                      "type": "element",
                                      "name": "LienInterne",
                                      "attributes": {
                                        "LienPublication": "F2855",
                                        "type": "Fiche d'information",
                                        "audience": "Particuliers"
                                      },
                                      "children": [
                                        {
                                          "type": "text",
                                          "text": "préavis"
                                        }
                                      ]
                                    },
                                    {
                                      "type": "text",
                                      "text": " dans les conditions habituelles de la "
                                    },
                                    {
                                      "type": "element",
                                      "name": "LienInterne",
                                      "attributes": {
                                        "LienPublication": "F2883",
                                        "type": "Fiche d'information",
                                        "audience": "Particuliers"
                                      },
                                      "children": [
                                        {
                                          "type": "text",
                                          "text": "démission"
                                        }
                                      ]
                                    },
                                    {
                                      "type": "text",
                                      "text": "."
                                    }
                                  ]
                                },
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "Elle  a droit à une "
                                    },
                                    {
                                      "type": "element",
                                      "name": "LienInterne",
                                      "attributes": {
                                        "LienPublication": "F24661",
                                        "type": "Fiche d'information",
                                        "audience": "Particuliers"
                                      },
                                      "children": [
                                        {
                                          "type": "text",
                                          "text": "indemnité compensatrice de congés payés"
                                        }
                                      ]
                                    },
                                    {
                                      "type": "text",
                                      "text": " si elle n'a pas pu prendre la totalité des congés acquis avant la date de rupture de son contrat."
                                    }
                                  ]
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Cas",
                              "children": [
                                {
                                  "type": "element",
                                  "name": "Titre",
                                  "children": [
                                    {
                                      "type": "element",
                                      "name": "Paragraphe",
                                      "children": [
                                        {
                                          "type": "text",
                                          "text": "Pour élever un enfant"
                                        }
                                      ]
                                    }
                                  ]
                                },
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "Toute salariée peut démissionner pour élever son enfant, sans être tenue de respecter un préavis."
                                    }
                                  ]
                                },
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "Elle n'a pas à verser d'indemnité de rupture du contrat de travail à l'employeur du fait que le préavis n'est pas effectué."
                                    }
                                  ]
                                },
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "La rupture du contrat doit avoir lieu au cours d'une des périodes suivantes :"
                                    }
                                  ]
                                },
                                {
                                  "type": "element",
                                  "name": "Liste",
                                  "attributes": {
                                    "type": "puce"
                                  },
                                  "children": [
                                    {
                                      "type": "element",
                                      "name": "Item",
                                      "children": [
                                        {
                                          "type": "element",
                                          "name": "Paragraphe",
                                          "children": [
                                            {
                                              "type": "text",
                                              "text": "À l'issue du "
                                            },
                                            {
                                              "type": "element",
                                              "name": "LienInterne",
                                              "attributes": {
                                                "LienPublication": "F2265",
                                                "type": "Fiche d'information",
                                                "audience": "Particuliers"
                                              },
                                              "children": [
                                                {
                                                  "type": "text",
                                                  "text": "congé de maternité"
                                                }
                                              ]
                                            }
                                          ]
                                        }
                                      ]
                                    },
                                    {
                                      "type": "element",
                                      "name": "Item",
                                      "children": [
                                        {
                                          "type": "element",
                                          "name": "Paragraphe",
                                          "children": [
                                            {
                                              "type": "text",
                                              "text": "Dans les "
                                            },
                                            {
                                              "type": "element",
                                              "name": "MiseEnEvidence",
                                              "children": [
                                                {
                                                  "type": "text",
                                                  "text": "2 mois"
                                                }
                                              ]
                                            },
                                            {
                                              "type": "text",
                                              "text": " suivant la naissance de l'enfant"
                                            }
                                          ]
                                        }
                                      ]
                                    }
                                  ]
                                },
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "Elle doit informer son employeur de sa volonté de démissionner, par lettre recommandée avec "
                                    },
                                    {
                                      "type": "element",
                                      "name": "LienInterne",
                                      "attributes": {
                                        "LienPublication": "R46090",
                                        "type": "Acronyme"
                                      },
                                      "children": [
                                        {
                                          "type": "text",
                                          "text": "RAR"
                                        }
                                      ]
                                    },
                                    {
                                      "type": "text",
                                      "text": " ou remise contre récépissé, au moins "
                                    },
                                    {
                                      "type": "element",
                                      "name": "MiseEnEvidence",
                                      "children": [
                                        {
                                          "type": "text",
                                          "text": "15 jours"
                                        }
                                      ]
                                    },
                                    {
                                      "type": "text",
                                      "text": " avant la fin du congé de maternité."
                                    }
                                  ]
                                },
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "Après sa démission, la salariée bénéficie d'une priorité de réembauche pendant"
                                    },
                                    {
                                      "type": "element",
                                      "name": "MiseEnEvidence",
                                      "children": [
                                        {
                                          "type": "text",
                                          "text": " 1 an"
                                        }
                                      ]
                                    },
                                    {
                                      "type": "text",
                                      "text": " pour des emplois correspondants à ses qualifications."
                                    }
                                  ]
                                },
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "La demande de  priorité de réembauche doit être adressée à l'employeur, dans l'année suivant la rupture du contrat de travail, par lettre avec "
                                    },
                                    {
                                      "type": "element",
                                      "name": "LienInterne",
                                      "attributes": {
                                        "LienPublication": "R46090",
                                        "type": "Acronyme"
                                      },
                                      "children": [
                                        {
                                          "type": "text",
                                          "text": "RAR"
                                        }
                                      ]
                                    },
                                    {
                                      "type": "text",
                                      "text": " ou contre  récépissé. En cas de réemploi,  la  salariée  bénéfice de tous les avantages qu'elle avait acquis avant son départ."
                                    }
                                  ]
                                },
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "La salariée a droit à une "
                                    },
                                    {
                                      "type": "element",
                                      "name": "LienInterne",
                                      "attributes": {
                                        "LienPublication": "F24661",
                                        "type": "Fiche d'information",
                                        "audience": "Particuliers"
                                      },
                                      "children": [
                                        {
                                          "type": "text",
                                          "text": "indemnité compensatrice de congés payés"
                                        }
                                      ]
                                    },
                                    {
                                      "type": "text",
                                      "text": " si elle n'a pas pu prendre la totalité des congés acquis avant la date de rupture de son contrat."
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        }
