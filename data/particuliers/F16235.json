                  "name": "PivotLocal",
                  "children": [
                    {
                      "type": "text",
                      "text": "notaire"
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "RessourceWeb",
                  "attributes": {
                    "URL": "https://www.notaires.fr/fr/directory"
                  }
                },
                {
                  "type": "element",
