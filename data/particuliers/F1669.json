                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Décès (le vôtre ou celui de   la personne avec qui vous vivez en couple)."
                                }
                              ]
                            }
                          ]
                        }
                      ]
