        {
          "type": "element",
          "name": "Texte",
          "children": [
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Une "
                },
                {
                  "type": "element",
                  "name": "LienIntra",
                  "attributes": {
                    "LienID": "R58642",
                    "type": "Définition de glossaire"
                  },
                  "children": [
                    {
                      "type": "text",
                      "text": "faute grave"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " ou "
                },
                {
                  "type": "element",
                  "name": "LienIntra",
                  "attributes": {
                    "LienID": "R58641",
                    "type": "Définition de glossaire"
                  },
                  "children": [
                    {
                      "type": "text",
                      "text": "lourde"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " peut être commise par le salarié "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "pendant un préavis"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " (de démission ou licenciement par exemple)."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Mais cette faute peut aussi avoir été "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "commise avant et être découverte"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " par l'employeur pendant le préavis."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Le fait que le salarié a commis une faute grave ou lourde permet à l'employeur de "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "prononcer une sanction"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " à l'encontre du salarié et d'"
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "interrompre le préavis avant son terme."
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Dans cette situation, "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "l'employeur respecte alors la procédure disciplinaire :"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " il "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "convoque le salarié à un entretien"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " par lettre recommandée ou remise en main propre."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Cette lettre est envoyée dans un délai de "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "2 mois maximum"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " à compter du jour où l'employeur a eu connaissance de la faute."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "La lettre précise l'objet, la date, l'heure et le lieu de l'entretien."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "La lettre informe le salarié qu'il "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "peut se faire assister"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " pendant l'entretien par une personne de son choix, appartenant au personnel de l'entreprise."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Pendant l'entretien, l'employeur indique au salarié "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "les motifs"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " pour lesquels il envisage de prononcer une sanction et recueille "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "ses explications"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "La sanction choisie par l'employeur est prononcée au plus tôt "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "2 "
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "LienIntra",
                  "attributes": {
                    "LienID": "R17508",
                    "type": "Définition de glossaire"
                  },
                  "children": [
                    {
                      "type": "text",
                      "text": "jours ouvrables"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " après l'entretien, et au plus tard "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "1 mois après"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "La sanction fait l'objet d'une décision écrite et argumentée. Elle est adressée au salarié par lettre recommandée ou remise en main propre."
                }
              ]
            },
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "Les "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "conséquences de l'interruption du préavis"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " pour le salarié "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "varient en fonction des situations"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " :"
                }
              ]
            },
            {
              "type": "element",
              "name": "BlocCas",
              "attributes": {
                "affichage": "radio"
              },
              "children": [
                {
                  "type": "element",
                  "name": "Cas",
                  "children": [
                    {
                      "type": "element",
                      "name": "Titre",
                      "children": [
                        {
                          "type": "text",
                          "text": "Le salarié effectue un préavis"
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "La faute commise ne permet pas au salarié de percevoir le salaire pour la période de préavis restant à effectuer après sa date de rupture par l'employeur."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F987",
                            "type": "Fiche d'information conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "L'indemnité légale"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " (ou conventionnelle, si elle est plus favorable) de licenciement et "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F24661",
                            "type": "Fiche d'information conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "l'indemnité de congés payés"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " restent dues au salarié s'il remplit les conditions pour en bénéficier."
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Cas",
                  "children": [
                    {
                      "type": "element",
                      "name": "Titre",
                      "children": [
                        {
                          "type": "text",
                          "text": "Le salarié est dispensé d'effectuer un préavis"
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "La totalité de "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F24660",
                            "type": "Fiche d'information conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "l'indemnité compensatrice de préavis"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " reste acquise au salarié si l'employeur découvre, pendant le préavis, une faute grave ou lourde commise "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "avant"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " le début de celui-ci."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F987",
                            "type": "Fiche d'information conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "L'indemnité légale"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " (ou conventionnelle, si elle est plus favorable) de licenciement et "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F24661",
                            "type": "Fiche d'information conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "l'indemnité de congés payés"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " restent dues au salarié s'il remplit les conditions pour en bénéficier."
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Reference",
