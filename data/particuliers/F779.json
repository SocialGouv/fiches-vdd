                  "children": [
                    {
                      "type": "text",
                      "text": "À savoir"
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "La mesure d'amnistie ne supprime "
                    },
                    {
                      "type": "element",
                      "name": "MiseEnEvidence",
                      "children": [
                        {
                          "type": "text",
                          "text": "que les sanctions pénales"
                        }
                      ]
                    },
                    {
                      "type": "text",
                      "text": " (peines de prison et amende). Elle n'efface pas les sanctions civiles (condamnation à verser des dommages et intérêts)."
                    }
                  ]
                }
              ]
            }
