                          ]
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Item",
                      "children": [
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Agent contractuel  en "
                            },
                            {
                              "type": "element",
                              "name": "LienInterne",
                              "attributes": {
                                "LienPublication": "R24389",
                                "type": "Sigle"
                              },
                              "children": [
                                {
                                  "type": "text",
                                  "text": "CDI"
                                }
                              ]
                            }
