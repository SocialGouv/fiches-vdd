                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Dans ce cas, la durée du ou des CDD précédents est déduite de la période d'essai prévue dans le CDI."
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Cas",
                          "children": [
                            {
                              "type": "element",
                              "name": "Titre",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Contrat à la fin d'une mission d'intérim"
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Une nouvelle période d'essai peut être prévue lorsqu'une entreprise embauche un salarié après une mission d'intérim."
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "La durée des missions d'intérim effectuées au sein de l'entreprise au cours des 3 mois précédant le recrutement est déduite de la période d'essai prévue dans le nouveau contrat de travail."
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Cas",
                          "children": [
                            {
                              "type": "element",
                              "name": "Titre",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Contrats successifs dans des fonctions différentes"
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Le salarié qui signe un nouveau contrat avec le même employeur peut effectuer une nouvelle période d'essai."
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "C'est le cas s'il est embauché pour occuper un poste de travail différent effectué auparavant dans l'entreprise."
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Cas",
                          "children": [
                            {
                              "type": "element",
                              "name": "Titre",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Contrats successifs dans les mêmes fonctions"
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Le salarié qui signe un nouveau contrat avec le même employeur pour occuper le même poste ne doit pas effectuer une nouvelle période d'essai."
                                }
                              ]
                            }
                          ]
                        }
