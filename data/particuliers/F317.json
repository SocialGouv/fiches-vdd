        {
          "type": "element",
          "name": "Texte",
          "children": [
            {
              "type": "element",
              "name": "Paragraphe",
              "children": [
                {
                  "type": "text",
                  "text": "La règle "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "varie"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " selon qu'il s'agit d'un "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "arrêt maladie"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": " ou d'un "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "accident du travail "
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "ou d'une "
                },
                {
                  "type": "element",
                  "name": "MiseEnEvidence",
                  "children": [
                    {
                      "type": "text",
                      "text": "maladie professionnelle"
                    }
                  ]
                },
                {
                  "type": "text",
                  "text": "."
                }
              ]
            },
            {
              "type": "element",
              "name": "BlocCas",
              "attributes": {
                "affichage": "radio"
              },
              "children": [
                {
                  "type": "element",
                  "name": "Cas",
                  "children": [
                    {
                      "type": "element",
                      "name": "Titre",
                      "children": [
                        {
                          "type": "text",
                          "text": "Cas général : arrêt maladie"
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Lorsque vous tombez malade "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "pendant"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " votre période d'essai, la "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "durée"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " de votre période d'essai est "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "prolongée"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": "."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "La date de fin de votre d'essai est repoussée de la durée de votre absence pour maladie."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "La durée de la prolongation de votre période d'essai est calculée en "
                        },
                        {
                          "type": "element",
                          "name": "LienIntra",
                          "attributes": {
                            "LienID": "R1092",
                            "type": "Définition de glossaire"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "jours calendaires"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " (sauf en cas de "
                        },
                        {
                          "type": "element",
                          "name": "LienIntra",
                          "attributes": {
                            "LienID": "R51533",
                            "type": "Définition de glossaire"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "dispositions conventionnelles"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " en vigueur dans l'entreprise)."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "ANoter",
                      "children": [
                        {
                          "type": "element",
                          "name": "Titre",
                          "children": [
                            {
                              "type": "text",
                              "text": "Exemple"
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Liste",
                          "attributes": {
                            "type": "puce"
                          },
                          "children": [
                            {
                              "type": "element",
                              "name": "Item",
                              "children": [
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "Si vous êtes salarié embauché avec 4 mois d'essai puis arrêté pendant 2 semaines, après 1 mois d'activité, votre période d'essai est prolongée de 2 semaines."
                                    }
                                  ]
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Item",
                              "children": [
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "Si vous êtes salarié embauché avec 4 mois d'essai puis arrêté pendant 2 semaines, 1 semaine avant la fin de l'essai, votre période d'essai est prolongée d'1 seule semaine qui n'a pas été effectuée."
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Cas",
                  "children": [
                    {
                      "type": "element",
                      "name": "Titre",
                      "children": [
                        {
                          "type": "text",
                          "text": "Accident du travail ou maladie professionnelle"
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Lorsque votre contrat de travail est "
                        },
                        {
                          "type": "element",
                          "name": "LienIntra",
                          "attributes": {
                            "LienID": "R43526",
                            "type": "Définition de glossaire"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "suspendu"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " durant votre période d'essai en raison d'un accident du travail ou d'une maladie professionnelle, la "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "durée"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " de la période d'essai est "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "prolongée"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": "."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "La date de fin de la période d'essai est repoussée de la durée exacte de l'absence pour accident du travail ou maladie professionnelle."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "La durée de la prolongation est calculée en "
                        },
                        {
                          "type": "element",
                          "name": "LienIntra",
                          "attributes": {
                            "LienID": "R1092",
                            "type": "Définition de glossaire"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "jours calendaires"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " (sauf en cas de "
                        },
                        {
                          "type": "element",
                          "name": "LienIntra",
                          "attributes": {
                            "LienID": "R51533",
                            "type": "Définition de glossaire"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "dispositions conventionnelles"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " ou contractuelles contraires)."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "La rupture de la période d'essai n'est pas possible pendant la suspension."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Toutefois, si votre employeur constate une "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F1137",
                            "type": "Fiche Question-réponse conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "faute grave"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " de votre part, votre contrat de travail peut, même s'il est suspendu, être rompu pour un motif autre que accident du travail ou maladie professionnelle."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Dans ce cas, votre employeur doit respecter la procédure spécifique applicable (par exemple, la procédure disciplinaire s'il vous reproche une faute grave)."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "La "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F1643",
                            "type": "Fiche d'information conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "rupture anticipée de la période d'essai"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " est possible dans les conditions habituelles (formalités simplifiées, délai de prévenance), après votre retour dans l'entreprise."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "ANoter",
                      "children": [
                        {
                          "type": "element",
                          "name": "Titre",
                          "children": [
                            {
                              "type": "text",
                              "text": "Exemple"
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Liste",
                          "attributes": {
                            "type": "puce"
                          },
                          "children": [
                            {
                              "type": "element",
                              "name": "Item",
                              "children": [
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "Si vous êtes embauché avec 4 mois d'essai puis arrêté pendant 2 semaines après 1 mois d'activité, votre période d'essai est prolongée de 2 semaines."
                                    }
                                  ]
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Item",
                              "children": [
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "Si vous êtes embauché avec 4 mois d'essai puis arrêté pendant 2 semaines, 1 semaine avant la fin de l'essai, votre période d'essai est prolongée d'1 seule semaine qui n'a pas été effectuée."
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Reference",
          "attributes": {
            "type": "Texte de référence",
