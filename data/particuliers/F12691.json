                      },
                      "children": [
                        {
                          "type": "element",
                          "name": "Titre",
                          "children": [
                            {
                              "type": "text",
                              "text": "Mairie"
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "PivotLocal",
                          "children": [
                            {
                              "type": "text",
                              "text": "mairie"
                            }
                          ]
                        },
                        {
