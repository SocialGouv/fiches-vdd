                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Si vous êtes titulaire d'une "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
