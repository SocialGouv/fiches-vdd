          "attributes": {
            "type": "Texte de référence",
            "URL": "https://www.legifrance.gouv.fr/codes/section_lc/LEGITEXT000006070721/LEGISCTA000044062131/",
            "ID": "R33540"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Code civil : articles 2435 à 2442"
                }
              ]
            },
            {
              "type": "element",
              "name": "Complement",
              "children": [
                {
                  "type": "text",
                  "text": "Radiation et réduction des inscriptions"
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Definition",
          "attributes": {
            "ID": "R2980"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Mainlevée"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Acte juridique par lequel il est mis fin à une situation créant un obstacle. Par exemple : mainlevée de saisies, mainlevée d'hypothèque."
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Definition",
          "attributes": {
            "ID": "R17851"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Acte authentique"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Document établi par un officier public compétent, tels qu'un notaire, un commissaire de justice (anciennement huissier de justice et commissaire-priseur judiciaire), un officier d'état civil, rédigé selon les formalités exigées par la loi et dont le contenu peut avoir la même valeur qu'une décision judiciaire"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "QuestionReponse",
          "attributes": {
            "ID": "F785",
            "audience": "Particuliers"
          },
          "children": [
            {
              "type": "text",
              "text": "Comment demander une hypothèque judiciaire conservatoire ?"
            }
          ]
        },
        {
          "type": "element",
          "name": "QuestionReponse",
          "attributes": {
            "ID": "F548",
            "audience": "Particuliers"
          },
          "children": [
            {
              "type": "text",
              "text": "Garantie co-emprunteur : que faire en cas de divorce ou de séparation du couple ?"
            }
          ]
        },
        {
          "type": "element",
          "name": "QuestionReponse",
          "attributes": {
            "ID": "F1669",
            "audience": "Particuliers"
          },
          "children": [
            {
              "type": "text",
              "text": "Peut-on rembourser son crédit immobilier par anticipation ?"
            }
          ]
        },
        {
          "type": "element",
          "name": "QuestionReponse",
          "attributes": {
            "ID": "F788",
            "audience": "Particuliers"
          },
          "children": [
            {
              "type": "text",
              "text": "Que devient l'hypothèque quand le crédit immobilier est remboursé ?"
            }
          ]
        }
      ]
