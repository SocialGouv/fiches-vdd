        {
          "type": "element",
          "name": "ListeSituations",
          "attributes": {
            "affichage": "onglet"
          },
          "children": [
            {
              "type": "element",
              "name": "Situation",
              "children": [
                {
                  "type": "element",
                  "name": "Titre",
                  "children": [
                    {
                      "type": "text",
                      "text": "Factures d'énergie (électricité, gaz ou chaleur)"
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Texte",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Les factures d’énergie doivent être réglées dans un délai de 14 jours suivant leur émission ou date limite de paiement."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "En cas de difficulté, contactez votre fournisseur. Il peut vous proposer une solution comme l'étalement des paiements."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Si vous ne payez pas votre facture dans ce délai, votre fournisseur vous envoie un "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "1"
                            },
                            {
                              "type": "element",
                              "name": "Exposant",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "er"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " courrier de relance"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": ". Ce courrier vous informe que si vous ne payez pas votre facture dans un délai supplémentaire de 15 jours, votre électricité ou gaz pourra être coupée ou sa puissance réduite. Le délai est de 30 jours si vous bénéficiez du "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F33667",
                            "type": "Fiche d'information conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "chèque énergie"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " ou si vous avez déjà bénéficié d'une aide du "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F1334",
                            "type": "Fiche Question-réponse conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "fonds de solidarité pour le logement (FSL)"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " pour régler une facture auprès de ce même fournisseur."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Si vous ne payez pas votre facture à la fin des 15 jours (ou 30 jours), votre fournisseur vous informe par un "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "2"
                            },
                            {
                              "type": "element",
                              "name": "Exposant",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "e"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " courrier de relance"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " que votre fourniture d'énergie pourra être coupée ou réduite sans autre préavis. Ce courrier doit vous indiquer que vous pouvez faire un recours auprès du FSL pour demander une aide financière."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Le recours auprès du FSL permet de suspendre la procédure d'impayé et donc de suspendre la coupure ou la réduction d'énergie. Le FSL informe votre fournisseur de votre recours."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Si au bout de 2 mois vous n'avez pas reçu de réponse favorable du FSL vous accordant une aide, votre fournisseur peut couper ou réduire votre énergie."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Si vous ne faites pas de recours auprès du FSL, votre fourniture d'énergie sera coupée ou réduite au bout de 20 jours."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "ANoter",
                      "children": [
                        {
                          "type": "element",
                          "name": "Titre",
                          "children": [
                            {
                              "type": "text",
                              "text": "À noter"
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "du 1"
                            },
                            {
                              "type": "element",
                              "name": "Exposant",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "er"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " novembre au 31 mars, même si vos factures ne sont pas payées, l’électricité et le gaz sont maintenus. Votre fournisseur peut toutefois réduire la puissance de votre électricité, sauf si vous bénéficiez du chèque énergie."
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "Situation",
              "children": [
                {
                  "type": "element",
                  "name": "Titre",
                  "children": [
                    {
                      "type": "text",
                      "text": "Factures d'eau"
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Texte",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Les factures d'eau doivent être réglées dans un délai de 14 jours suivant leur émission ou date limite de paiement."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "En cas de difficulté, contactez votre distributeur. Il peut vous proposer une solution comme l'étalement des paiements."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Si vous ne payez pas votre facture dans ce délai, votre distributeur vous envoie un "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "1"
                            },
                            {
                              "type": "element",
                              "name": "Exposant",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "er"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " courrier de relance"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": ". Ce courrier vous informe que avez un délai supplémentaire de 15 jours pour payer votre facture."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Si vous ne payer pas votre facture à la fin du délai de 15 jours, votre distributeur vous informe par un "
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "2"
                            },
                            {
                              "type": "element",
                              "name": "Exposant",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "e"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " courrier de relance"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " que vous pouvez faire une demande d'aide financière auprès du "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F1334",
                            "type": "Fiche Question-réponse conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "fonds de solidarité pour le logement (FSL)"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": "."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Si au bout de 2 mois vous n'avez pas reçu de réponse favorable du FSL vous accordant une aide, vous devrez payer la totalité de votre facture. Si vous ne payer pas, une "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "N277",
                            "type": "Dossier",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "procédure de recouvrement"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " pourra être engagée."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Attention",
                      "children": [
                        {
                          "type": "element",
                          "name": "Titre",
                          "children": [
                            {
                              "type": "text",
                              "text": "Attention"
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "il est interdit à tout distributeur de couper ou réduire l'eau de votre "
                            },
                            {
                              "type": "element",
                              "name": "LienIntra",
                              "attributes": {
                                "LienID": "R1064",
                                "type": "Définition de glossaire"
                              },
                              "children": [
                                {
                                  "type": "text",
                                  "text": "résidence principale"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " même en cas d'impayé et cela tout au long de l'année."
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
