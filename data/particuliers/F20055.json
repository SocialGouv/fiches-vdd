        {
          "type": "element",
          "name": "ListeSituations",
          "attributes": {
            "affichage": "onglet"
          },
          "children": [
            {
              "type": "element",
              "name": "Situation",
              "children": [
                {
                  "type": "element",
                  "name": "Titre",
                  "children": [
                    {
                      "type": "text",
                      "text": "Factures d'énergie (électricité, gaz ou chaleur)"
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Texte",
                  "children": [
                    {
                      "type": "element",
                      "name": "Chapitre",
                      "children": [
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Les factures d’énergie doivent être réglées dans un délai de 14 jours suivant leur émission ou  date limite de paiement."
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Si vous ne payez pas votre facture dans ce délai, votre fournisseur vous envoie un "
                            },
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "1"
                                },
                                {
                                  "type": "element",
                                  "name": "Exposant",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "er"
                                    }
                                  ]
                                },
                                {
                                  "type": "text",
                                  "text": " courrier"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " (simple ou recommandé). Ce courrier vous informe que si vous ne payez pas votre facture dans un délai supplémentaire de 15 jours :"
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Liste",
                          "attributes": {
                            "type": "puce"
                          },
                          "children": [
                            {
                              "type": "element",
                              "name": "Item",
                              "children": [
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "votre électricité pourra être coupée ou sa puissance réduite,"
                                    }
                                  ]
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Item",
                              "children": [
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "votre gaz ou dispositif permettant de transférer de la chaleur pourra être coupé."
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Le délai est rallongé de 15  à 30 jours :"
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Liste",
                          "attributes": {
                            "type": "puce"
                          },
                          "children": [
                            {
                              "type": "element",
                              "name": "Item",
                              "children": [
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "si vous bénéficiez du "
                                    },
                                    {
                                      "type": "element",
                                      "name": "LienInterne",
                                      "attributes": {
                                        "LienPublication": "F33667",
                                        "type": "Fiche d'information",
                                        "audience": "Particuliers"
                                      },
                                      "children": [
                                        {
                                          "type": "text",
                                          "text": "chèque énergie"
                                        }
                                      ]
                                    },
                                    {
                                      "type": "text",
                                      "text": ","
                                    }
                                  ]
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Item",
                              "children": [
                                {
                                  "type": "element",
                                  "name": "Paragraphe",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "ou avez déjà bénéficié d'une aide du "
                                    },
                                    {
                                      "type": "element",
                                      "name": "LienInterne",
                                      "attributes": {
                                        "LienPublication": "F1334",
                                        "type": "Fiche Question-réponse",
                                        "audience": "Particuliers"
                                      },
                                      "children": [
                                        {
                                          "type": "text",
                                          "text": "fonds de solidarité pour le logement (FSL)"
                                        }
                                      ]
                                    },
                                    {
                                      "type": "text",
                                      "text": "."
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "À la fin des 15 jours (ou 30 jours), votre fournisseur  vous informe par un "
                            },
                            {
                              "type": "element",
                              "name": "MiseEnEvidence",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "2"
                                },
                                {
                                  "type": "element",
                                  "name": "Exposant",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "e"
                                    }
                                  ]
                                },
                                {
                                  "type": "text",
                                  "text": " courrier"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " (simple ou recommandé) que votre fourniture d'énergie pourra être coupée ou réduite. Ce courrier doit vous indiquer que vous pouvez saisir le FSL pour demander une aide financière."
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "La saisine du FSL a pour effet de suspendre la procédure d'impayé et donc de suspendre la coupure ou la réduction d'énergie. Le FSL doit informer votre fournisseur de votre saisine."
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Si au bout de 2 mois vous n'avez pas reçu de réponse favorable du FSL vous accordant une aide, votre fournisseur peut procéder à la coupure ou réduction d'énergie."
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "ANoter",
                          "children": [
                            {
                              "type": "element",
                              "name": "Titre",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "À noter"
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "du 1"
                                },
                                {
                                  "type": "element",
                                  "name": "Exposant",
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "er"
                                    }
                                  ]
                                },
                                {
                                  "type": "text",
                                  "text": " novembre au 31 mars, même si vos factures ne sont pas payées, l’électricité et le gaz sont maintenus. Votre fournisseur peut toutefois procéder à une réduction de la puissance de votre électricité, sauf si vous bénéficiez du chèque énergie."
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "Situation",
              "children": [
                {
                  "type": "element",
                  "name": "Titre",
                  "children": [
                    {
                      "type": "text",
                      "text": "Factures d'eau"
                    }
                  ]
                },
                {
                  "type": "element",
                  "name": "Texte",
                  "children": [
                    {
                      "type": "element",
                      "name": "Chapitre",
                      "children": [
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Les factures d'eau doivent être réglées dans un délai de 14 jours suivant leur émission ou  date limite de paiement."
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "En cas de difficultés, il est recommandé de contacter rapidement votre distributeur afin de convenir d'un étalement  de votre dette ou son report."
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "En l'absence d'accord avec votre distributeur d'eau sur le paiement, vous recevez un courrier (simple ou recommandé) vous informant que vous pouvez saisir le   "
                            },
                            {
                              "type": "element",
                              "name": "LienInterne",
                              "attributes": {
                                "LienPublication": "F1334",
                                "type": "Fiche Question-réponse",
                                "audience": "Particuliers"
                              },
                              "children": [
                                {
                                  "type": "text",
                                  "text": "fonds de solidarité pour le logement (FSL)"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": ". La saisine du FSL vous permet de demander une aide financière pour régler vos impayés."
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Si vous ne donnez pas suite à la relance de votre distributeur d'eau, une "
                            },
                            {
                              "type": "element",
                              "name": "LienInterne",
                              "attributes": {
                                "LienPublication": "N277",
                                "type": "Dossier",
                                "audience": "Particuliers"
                              },
                              "children": [
                                {
                                  "type": "text",
                                  "text": "procédure de recouvrement"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": " peut être engagée."
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Attention",
                          "children": [
                            {
                              "type": "element",
                              "name": "Titre",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Attention"
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "il est interdit à tout fournisseur de couper l'eau de votre "
                                },
                                {
                                  "type": "element",
                                  "name": "LienIntra",
                                  "attributes": {
                                    "LienID": "R1064",
                                    "type": "Définition de glossaire"
                                  },
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "résidence principale"
                                    }
                                  ]
                                },
                                {
                                  "type": "text",
                                  "text": " même en cas d'impayé et cela tout au long de l'année."
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        },
