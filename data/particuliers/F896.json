                  ]
                },
                {
                  "type": "element",
                  "name": "Item",
                  "children": [
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Si la copropriété a décidé de voter un "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F36760",
                            "type": "Fiche d'information conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "plan pluriannuel de travaux"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": ", le syndic peut demander aux copropriétaires les avances prévues par l'échéancier de ce plan."
                        }
                      ]
                    }
                  ]
                }
              ]
