                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "À réception, l'assureur établit un "
                        },
                        {
                          "type": "element",
                          "name": "LienIntra",
                          "attributes": {
                            "LienID": "R10829",
                            "type": "Définition de glossaire"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "avenant"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " modifiant la clause bénéficiaire du contrat initial."
                        }
                      ]
                    }
