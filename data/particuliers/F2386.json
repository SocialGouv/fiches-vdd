                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Le bénéficiaire a accepté sa désignation selon la procédure obligatoire"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "Le  "
                        },
                        {
                          "type": "element",
                          "name": "LienIntra",
                          "attributes": {
                            "LienID": "R43922",
                            "type": "Définition de glossaire"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "souscripteur"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " ne peut plus modifier le bénéficiaire."
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "text",
                          "text": "L'acceptation du bénéficiaire est "
                        },
                        {
                          "type": "element",
                          "name": "LienIntra",
                          "attributes": {
                            "LienID": "R3083",
                            "type": "Définition de glossaire"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "irrévocable"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " si elle a été faite selon l'une des 2 procédures suivantes :"
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Liste",
                      "attributes": {
                        "type": "puce"
                      },
                      "children": [
                        {
                          "type": "element",
                          "name": "Item",
                          "children": [
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Accord tripartite entre souscripteur (qui est en général également l'assuré), assureur et bénéficiaire acceptant"
                                }
                              ]
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Item",
                          "children": [
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Accord entre souscripteur et bénéficiaire acceptant, "
                                },
                                {
                                  "type": "element",
                                  "name": "LienIntra",
                                  "attributes": {
                                    "LienID": "R14732",
                                    "type": "Définition de glossaire"
                                  },
                                  "children": [
                                    {
                                      "type": "text",
                                      "text": "notifié"
                                    }
                                  ]
                                },
                                {
                                  "type": "text",
                                  "text": " à l'assureur"
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            },
