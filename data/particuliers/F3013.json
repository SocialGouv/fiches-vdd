                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "Non"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": ", la formation hors temps de travail dans le cadre de la "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F13516",
                            "type": "Fiche d'information conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "reconversion ou promotion par alternance (Pro-A)"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " n'est pas rémunérée."
                        }
                      ]
                    }
                  ]
                }
              ]
            }
