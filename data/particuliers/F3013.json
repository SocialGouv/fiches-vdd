                  "attributes": {
                    "LienPublication": "F13516",
                    "type": "Fiche d'information conditionnée",
                    "audience": "Particuliers"
                  },
                  "children": [
                    {
                      "type": "text",
                      "text": "reconversion ou promotion par alternance (Pro-A)"
