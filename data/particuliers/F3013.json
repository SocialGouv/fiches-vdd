                  "name": "Cas",
                  "children": [
                    {
                      "type": "element",
                      "name": "Titre",
                      "children": [
                        {
                          "type": "text",
                          "text": "À l'initiative du salarié"
                        }
                      ]
                    },
                    {
                      "type": "element",
                      "name": "Paragraphe",
                      "children": [
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": "Non"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": ". Lorsqu'un salarié utilise son "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F10705",
                            "type": "Fiche d'information conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "compte personnel de formation (CPF)"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " ou sollicite un "
                        },
                        {
                          "type": "element",
                          "name": "LienInterne",
                          "attributes": {
                            "LienPublication": "F14018",
                            "type": "Fiche d'information conditionnée",
                            "audience": "Particuliers"
                          },
                          "children": [
                            {
                              "type": "text",
                              "text": "projet de transition professionnelle (PTP)"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": " pour se former"
                        },
                        {
                          "type": "element",
                          "name": "MiseEnEvidence",
                          "children": [
                            {
                              "type": "text",
                              "text": " en dehors du temps de travail"
                            }
                          ]
                        },
                        {
                          "type": "text",
                          "text": ", il ne perçoit pas de rémunération."
                        }
