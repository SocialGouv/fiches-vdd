              "children": [
                {
                  "type": "text",
                  "text": "Conflit d'intérêt (fonction publique)"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Situation d'interférence entre un intérêt public et des intérêts publics ou privés de nature à influencer ou paraître  influencer l'exercice indépendant, impartial et objectif de ses fonctions par un agent public"
                    }
                  ]
                }
              ]
