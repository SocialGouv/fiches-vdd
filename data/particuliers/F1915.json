                              "type": "element",
                              "name": "Titre",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Étudiant de moins de 26 ans"
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Le salarié a droit, s'il le demande, de bénéficier d'une durée minimale inférieure à la durée applicable dans l'entreprise pour lui permettre de poursuivre ses études."
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "Le salarié doit alors en faire la demande auprès de son employeur."
                                }
                              ]
                            },
                            {
                              "type": "element",
                              "name": "Paragraphe",
                              "children": [
                                {
                                  "type": "text",
                                  "text": "L'employeur doit accepter la demande du salarié."
                                }
                              ]
                            }
