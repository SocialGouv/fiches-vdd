              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Acte interdit par la loi et puni d'une amende et/ou d'une peine d'emprisonnement inférieure à 10 ans"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Definition",
          "attributes": {
            "ID": "R49230"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
