                  ]
                },
                {
                  "type": "element",
                  "name": "Texte",
                  "children": [
                    {
                      "type": "element",
                      "name": "Chapitre",
                      "children": [
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Dans le cas d'une "
                            },
                            {
                              "type": "element",
                              "name": "LienIntra",
                              "attributes": {
                                "LienID": "R1130",
                                "type": "Définition de glossaire"
                              },
                              "children": [
                                {
                                  "type": "text",
                                  "text": "vente par adjudication"
                                }
                              ]
                            },
                            {
                              "type": "text",
                              "text": ", vous devez disposer des sommes pour payer le prix du bien immobilier au moment de la vente."
                            }
                          ]
                        },
                        {
                          "type": "element",
                          "name": "Paragraphe",
                          "children": [
                            {
                              "type": "text",
                              "text": "Si vous avez besoin d'un prêt pour financer le bien, vous devez l'obtenir avant la vente."
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
