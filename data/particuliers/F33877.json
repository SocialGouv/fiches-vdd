          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Parties privatives d'une copropriété"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Parties des bâtiments (porte d'entrée, salon, salle de bains...) et des terrains réservés à l'usage exclusif d'un copropriétaire"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "element",
          "name": "Definition",
          "attributes": {
            "ID": "R44506"
          },
          "children": [
            {
              "type": "element",
              "name": "Titre",
              "children": [
                {
                  "type": "text",
                  "text": "Parties communes d'une copropriété"
                }
              ]
            },
            {
              "type": "element",
              "name": "Texte",
              "children": [
                {
                  "type": "element",
                  "name": "Paragraphe",
                  "children": [
                    {
                      "type": "text",
                      "text": "Parties de bâtiments (couloirs, chaudière, canalisation, garde-corps...) et des terrains (jardins, parcs...) affectés à l'usage ou à l'utilité de tous les copropriétaires"
                    }
                  ]
                }
              ]
            },
            {
              "type": "element",
              "name": "Reference",
              "attributes": {
                "type": "Texte de référence",
                "URL": "https://www.legifrance.gouv.fr/loda/id/LEGITEXT000006068256/",
