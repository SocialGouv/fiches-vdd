{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "checkJs": true, 
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2019"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "@types/*"]
    }
  },
  "include": ["src/**/*.js", "src/index.d.ts"]
}
